{% extends 'base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card header bg-primary text-white">
            <h1>Recept</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ recept.id }}</td>
                </tr>
                <tr>
                    <th>Naam</th>
                    <td>{{ recept.naam }}</td>
                </tr>
                <tr>
                    <th>Prijsperliter</th>
                    <td>{{ recept.prijsPerLiter }}</td>
                </tr>
                <tr>
                    <th>Bereidingswijze</th>
                    <td>{{ recept.bereidingswijze }}</td>
                </tr>
                </tbody>
            </table>
        </div>

    </div>


            <a href="{{ path('recept_index') }}" class="btn btn-primary">Back to the list</a>

            <a href="{{ path('edit_recept', { 'id': recept.id }) }}" class="btn btn-info">Edit</a>

            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}

{% endblock %}
