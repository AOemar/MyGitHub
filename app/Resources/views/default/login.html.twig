{% extends 'base.html.twig' %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="POST">
        <table>
            <caption>Inloggen</caption>
            <tr>
                <td>Gebruikersnaam:</td>
                <td>
                    <input type="text" autocomplete="off" id="username" placeholder="Vul uw gebruikersnaam in" name="_username" value="{{ last_username }}" required="required" />
                </td>
            </tr>
            <tr>
                <td>Wachtwoord:</td>
                <td>
                    <input type="password" autocomplete="off" id="password" placeholder="Vul uw wachtwoord in" name="_password" required="required" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="inloggen"><input type="reset" value="reset">
                </td>
            </tr>
        </table>
    </form>

{% endblock %}

{% block stylesheets %}
    <link rel="STYLESHEET" href="{{ asset('css/inloggen.css') }}" type="text/css">
{% endblock %}